<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>


    <div class="w-full min-h-screen text-white p-10 bg-zinc-900">
        <div class="flex  justify-end"> <a href="/logout"
                class="text-white-500 px-3 py-2  bg-purple-500 border-2 font-firacode border-white-500 rounded-md  text-sm mb-5  inline-block">Logout</a>
        </div>
        <div class="flex items-start gap-3">
            <div class="w-10 h-10  overflow-hidden  rounded-md">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilepic %>" alt="error"
                    srcset="">
            </div>
            <h3 class="text-3xl mb-10"><span class="font-light">Hello</span>
                <%= user.name %>üòÅ
            </h3>
        </div>
        <h5 class="mb-5">You can create a new post</h5>
        <form class="" action="/post" method="post">


            <textarea
                class="p-3  block outline=none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"
                name="content" id="" placeholder="Dimag me kya chal rha hai?"></textarea>
            <input type="submit" value="Create new post" class="px-3 py-2 bg-blue-500 block text-sm rounded-md mt-2 ">

        </form>



        <div class="posts mt-20">

            <h3 class="text-zinc-500">Your Posts</h3>
            <div class="postcontainer">
                <% user.posts.forEach(function(post){%>
                    <div class="post w-1/3 p-6 mb-5  rounded-md border-2 border-zinc-800 mt-5 bg-zinc-800">
                        <h4 class="text-cyan-500 mb-2">
                            @<%= user.username %>
                        </h4>
                        <p class="text-sm tracking-tighter">
                            <%= post.content %>
                        </p>
                        <small class="mt-2 inline-block">
                            <%=post.likes.length %>
                        </small>
                        <div class="btns flex mt-2 gap-4">
                            <a href="/like/<%=post._id %> " class="text-pink-500">

                                <%= post.likes.indexOf(user._id)==-1 ?"Like":"Unlike" %>


                            </a>


                            <a href="/edit/<%=post._id%>" class="text-gray-500">Edit</a>
                        </div>
                    </div>

                    <% }) %>
            </div>

        </div>
    </div>

</body>

</html>