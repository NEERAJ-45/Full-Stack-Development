<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style></style>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block px-5 py-2 w-full rounded-md outline-none bg-zinc-800" type="text" name="title"
                    placeholder="Title goes here" />
                <textarea name="details"
                    class="block w-full rounded-md outline-none mt-2 px-5 py-2 resize-none bg-zinc-800"
                    placeholder="Write Your task details here"></textarea>
                <input type="submit" class="mt-2 bg-blue-600 p-2 cursor-pointer rounded-md text-white"
                    value="Create Task" />
            </form>
        </div>

        <div class="tasks flex gap-4 flex-wrap p-10">
            <% if (files.length> 0) { %>
                <% files.forEach(function(val) { %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter">
                            <%= val %>
                        </h1>

                        <div class="flex mt-3 w-full justify-between items-center">
                            <a href="/file/<%= val %>" class="text-blue-500 inline-block ">Read More</a>
                            <a class="text-zinc-600" href="/edit/<%= val %>">Edit Filename</a>
                        </div>


                    </div>
                    <% }); %>
                        <% } else { %>
                            <h3 class="text-zinc-600">No tasks yet</h3>
                            <% } %>
        </div>
    </div>
</body>

</html>